vrrp_instance VI_1 {
    interface eth1
    state BACKUP
    
    # set priority
    priority {% if inventory_hostname == 'router1' %}101{% else %}100{% endif %}

    # set VRRP Router ID
    virtual_router_id 51
    
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass secret123
    }
    virtual_ipaddress {
        {{ vrrp_vip }}/{{ lan_network_prefix }}
    }
}
